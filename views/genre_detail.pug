extends layout

block content
  console.log('Todo bien entrando a genre_detail.pug')
  h1 Genero: #{genre.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Libros del mismo
    
    dl
    each book in genre_books
      dt 
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This genre has no books

    hr
    p
    a(href=genre.url+'/delete') Borrar Genero
    p
    a(href=genre.url+'/update') Actualizar Genero
